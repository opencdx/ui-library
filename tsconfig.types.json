{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "outDir": "dist",
    "isolatedModules": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "target": "ES2020",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "tailwind-variants": ["./node_modules/tailwind-variants"],
      "@react-types/shared": ["./node_modules/@react-types/shared"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "cypress", "**/*.stories.*", "**/*.cy.*"]
}


